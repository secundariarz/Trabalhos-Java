package projetodoarielzinho;

import java.util.Scanner;

public class Ex9Li {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		System.out.println("DIGITE UM NUMERO: ");
		double atual = entrada.nextDouble();
		int count = 0;
		while(atual > 0) {
			atual = entrada.nextDouble();
			count++;
			
		}
		double res = atual / count;
		System.out.println("A quantidade de numeros foram: " + count);
		System.out.println("A media dos mesmos Ã©: " + res);
		
	}
}
